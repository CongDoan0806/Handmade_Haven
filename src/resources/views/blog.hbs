<div class="detail-head text-center d-flex flex-column justify-content-center align-items-center">
    <h2 class="head-name-shop uppercase">Blog</h2>
    <div class="link-detail-head d-flex text-center justify-content-center">
    <a href="/">Home</a>
    <span> / </span>
    <p>Blog</p>
    </div>
</div>
<div class="container py-5 blog-page-container">
    <div class="row">
      <!-- Left column -->
      <div class="col-md-8">
        {{#each blogs}}
        <div class="card-blog position-relative mb-5">
          <span class="badge-custom uppercase">{{this.category_name}}</span>
          <div class="img-blog-box">
            <a href="/blog/{{this.post_id}}"><img src="/img/blog/{{this.post_img}}" class="card-blog-img-top" alt="Yarn Basket"></a>
          </div>
          <div class="card-blog-body">
            <p class="date-post-blog mt-3">by <span class="main-color">cmsmasters</span> on {{this.published_at}}</p>
            <a href=""><h3 class="card-blog-title">{{this.post_title}}</h3></a>
            <p class="card-blog-content">{{this.post_content}}</p>
            <a href="/blog/{{this.post_id}}" class="read-more-link uppercase">read mode</a>
          </div>
        <hr>
        </div>
         {{/each}}
         <div class="d-flex justify-content-between align-items-center">
            <span style="width: 30%;" class="line-author mb-3"></span>
                <p id="loadMore">Load More Posts</p>
            <span style="width: 30%;" class="line-author mb-3"></span>
         </div>
      </div>
      <!-- Right column -->
      <div class="col-md-4">
        <div class="blog-author-info">
          <div class="author-title-top d-flex justify-content-between align-items-center">
            <span class="line-author mb-3"></span>
                <p class="uppercase fw-bold">about author</p>
            <span class="line-author mb-3"></span>
          </div>
          <div class="card-blog-body text-center">
            <img src="/img/user/cong-doan.jpg" alt="Author Photo">
            <h5 class="mt-3">Tran Cong Doan</h5>
            <p class="text-muted small text-color-gray">
              My name is Tran Cong Doan, born in 2005. I'm a second-year Information Technology student passionate about web development, especially backend. I have experience in building e-commerce and management systems. My goal is to become a skilled backend developer.
            </p>
            <div class="d-flex justify-content-center mt-3">
              <a href="https://www.facebook.com/tran.cong.oan.550409" class="text-decoration-none mx-2 main-color"><i class="bi bi-facebook"></i></a>
              <a href="https://www.facebook.com/tran.cong.oan.550409" class="text-decoration-none mx-2 main-color"><i class="bi bi-twitter"></i></a>
              <a href="https://www.facebook.com/tran.cong.oan.550409" class="text-decoration-none mx-2 main-color"><i class="bi bi-youtube"></i></a>
            </div>
          </div>
        </div>
        <div class="blog-img-sidebar mt-4">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQlv6l-4jx0hkE6bsv40faKxwXAnmCOnZGmMQ&s" alt="">
        </div>
      </div>

    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    let cardblogs = document.querySelectorAll(".card-blog");
    let loadMoreBtn = document.getElementById("loadMore");
    let visibleItems = 5; 

    loadMoreBtn.addEventListener("click", function () {
        let totalItems = cardblogs.length;
        let nextVisible = visibleItems + 5; 

        for (let i = visibleItems; i < nextVisible && i < totalItems; i++) {
            cardblogs[i].style.display = "block"; 
        }

        visibleItems = nextVisible; 

        if (visibleItems >= totalItems) {
            loadMoreBtn.style.display = "none"; 
        }
    });
});

</script>