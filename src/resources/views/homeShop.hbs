    <script>
        // Mỗi khung sẽ có một mảng ảnh riêng
        const sliders = [
            document.querySelector('#slider-left'),
            document.querySelector('#slider-center'),
            document.querySelector('#slider-right-top'),
            document.querySelector('#slider-right-bottom')
        ];

        sliders.forEach(slider => {
          const images = slider.querySelectorAll('img');
          const text = slider.querySelector('.text-overlay');
          let currentIndex = 0;

          function nextSlide() {
              // Ẩn ảnh hiện tại
              images[currentIndex].classList.remove('show');
              images[currentIndex].classList.add('hide-left');

              // Chuyển sang ảnh kế tiếp
              currentIndex = (currentIndex + 1) % images.length;

              // Hiển thị ảnh kế tiếp
              images[currentIndex].classList.remove('hide-right');
              images[currentIndex].classList.add('show');

              // Đảm bảo ảnh cũ quay lại trạng thái ban đầu để lặp
              const previousIndex = (currentIndex === 0) ? images.length - 1 : currentIndex - 1;
              setTimeout(() => {
                  images[previousIndex].classList.remove('hide-left');
                  images[previousIndex].classList.add('hide-right');
              }, 2000); // Đảm bảo thời gian khớp với animation

              // Thay đổi văn bản
              text.classList.add('hidden');
              setTimeout(() => {
                  text.classList.remove('hidden');
              }, 500); // Delay để đồng bộ với animation
          }

          setInterval(nextSlide, 5000); // Thời gian đổi ảnh
      });

    </script>